@page "/income"
@rendermode InteractiveServer
@using SmartBudget.DTOs
@using SmartBudget.Interfaces
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization
@inject IIncomeService IncomeService
@inject IExpenseService ExpenseService
@inject AuthenticationStateProvider AuthStateProvider

@attribute [Authorize]

<PageTitle>Income</PageTitle>

<div class="container-fluid py-4 px-lg-4">
    <!-- Page Header -->
    <div class="sb-page-header d-flex justify-content-between align-items-center" style="background:linear-gradient(135deg, #10b981 0%, #059669 50%, #047857 100%);">
        <div>
            <h2>ðŸ’µ Income</h2>
            <p>Track all your income sources</p>
        </div>
        <div class="d-flex gap-3">
            <div class="sb-stat-card" style="background:rgba(255,255,255,0.15);border:none;color:#fff;min-width:120px;">
                <div class="sb-stat-value" style="color:#fff;">@totalIncomeDisplay</div>
                <div class="sb-stat-label" style="color:rgba(255,255,255,0.8);">Total Income</div>
            </div>
            <div class="sb-stat-card" style="background:rgba(255,255,255,0.15);border:none;color:#fff;min-width:120px;">
                <div class="sb-stat-value" style="color:@(remainingIncome >= 0 ? "#fff" : "#fca5a5");">@remainingIncomeDisplay</div>
                <div class="sb-stat-label" style="color:rgba(255,255,255,0.8);">Remaining</div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(error))
    {
        <div class="alert alert-danger">@error</div>
    }
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="alert alert-success">@message</div>
    }

    <!-- Add Income Card -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="fw-bold mb-3">Add Income</h5>
            <EditForm Model="newIncome" OnValidSubmit="AddIncome">
                <DataAnnotationsValidator />
                <div class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label">Amount</label>
                        <div class="input-group">
                            <span class="input-group-text" style="background:var(--sb-success-bg);border-color:var(--sb-gray-200);font-weight:700;color:var(--sb-success);">$</span>
                            <InputNumber class="form-control" @bind-Value="newIncome.Amount" placeholder="0.00" />
                        </div>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label">Source</label>
                        <InputText class="form-control" placeholder="e.g. Salary, Freelance" @bind-Value="newIncome.Source" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Date</label>
                        <InputDate class="form-control" @bind-Value="newIncome.Date" />
                    </div>
                    <div class="col-md-2 d-grid">
                        <button class="btn btn-success" type="submit" disabled="@isBusy">+ Add</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>

    <!-- Income Table -->
    <div class="card">
        <div class="card-body p-0">
            <div class="d-flex justify-content-between align-items-center px-4 py-3" style="border-bottom:1px solid var(--sb-gray-200);">
                <h5 class="mb-0 fw-bold">Income Entries</h5>
                <span class="badge" style="background:var(--sb-success-bg);color:var(--sb-success);font-size:0.85rem;">
                    @incomes.Count entries
                </span>
            </div>

            @if (incomes.Count == 0)
            {
                <div class="sb-empty-state">
                    <div class="sb-empty-icon">ðŸ’µ</div>
                    <p>No income recorded yet. Add your first income above!</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Date</th>
                                <th>Source</th>
                                <th class="text-end pe-4">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var income in incomes)
                            {
                                <tr>
                                    <td class="ps-4 text-muted small">@income.Date.ToShortDateString()</td>
                                    <td class="fw-semibold">@income.Source</td>
                                    <td class="text-end pe-4 fw-bold" style="color:var(--sb-success);">+@income.Amount.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td class="ps-4" colspan="2">Total</td>
                                <td class="text-end pe-4 fw-bold" style="color:var(--sb-success);">@totalIncomeDisplay</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<IncomeDto> incomes = new();
    private CreateIncomeDto newIncome = new();
    private string? error;
    private string? message;
    private bool isBusy = false;
    private string? userId;
    private decimal totalIncome;
    private decimal remainingIncome;
    private string totalIncomeDisplay => totalIncome.ToString("C");
    private string remainingIncomeDisplay => remainingIncome.ToString("C");

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        userId = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
        await LoadIncome();
        await CalculateTotals();
    }

    private async Task LoadIncome()
    {
        isBusy = true;
        try
        {
            var result = await IncomeService.GetUserIncomeAsync(userId);
            incomes = result.ToList();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private async Task AddIncome()
    {
        isBusy = true;
        error = null;
        message = null;
        try
        {
            await IncomeService.CreateIncomeAsync(new IncomeDto {
                Amount = newIncome.Amount,
                Source = newIncome.Source,
                Description = newIncome.Description,
                Date = newIncome.Date
            }, userId);
            message = "Income added successfully.";
            newIncome = new CreateIncomeDto();
            await LoadIncome();
            await CalculateTotals();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
        finally
        {
            isBusy = false;
        }
    }

    private async Task CalculateTotals()
    {
        totalIncome = incomes.Sum(i => i.Amount);
        var expenses = await ExpenseService.GetExpensesByUserAsync(userId);
        var totalExpenses = expenses.Sum(e => e.Amount);
        remainingIncome = totalIncome - totalExpenses;
    }
}
