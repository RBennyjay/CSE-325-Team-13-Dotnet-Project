<style>
    :root {
        --primary-blue: #0D6EFD;
        --deep-navy: #0a192f;
    }

    .hero-section {
        background: radial-gradient(circle at top right, #f8f9ff 0%, #ffffff 100%);
        overflow: hidden;
        padding-top: 40px;
    }

    .gradient-text {
        background: linear-gradient(90deg, #0D6EFD, #6610f2);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .bg-glass {
        background: rgba(13, 110, 253, 0.1);
        color: var(--primary-blue);
        border: 1px solid rgba(13, 110, 253, 0.2);
    }

    .premium-card {
        border: 1px solid #f0f0f0;
        border-radius: 1.25rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        background: #fff;
    }

    .premium-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.05);
        border-color: var(--primary-blue);
    }

    .icon-box {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        font-size: 1.5rem;
    }

    .bg-blue-light { background: #e7f0ff; }
    .bg-green-light { background: #eafff0; }
    .bg-purple-light { background: #f3eaff; }
    .bg-gold-light { background: #fff9e6; }

    @* .footer-premium {
        border-top: 1px solid #333;
    } *@

    .floating {
        animation: floating 3s ease-in-out infinite;
    }

    @@keyframes floating {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-15px); }
        100% { transform: translateY(0px); }
    }

    .min-vh-75 { min-height: 75vh; }
    
    .stats-bar {
        margin-top: -50px;
        position: relative;
        z-index: 10;
    }

            /*  Visibility Styles */
            .footer-modern {
                background-color: #0d1117;
                /* GitHub-style deep dark */
                border-top: 1px solid rgba(255, 255, 255, 0.05);
            }

            .text-light-gray {
                color: #adb5bd !important;
                /* Standard Bootstrap gray-500 for better visibility */
            }

            .text-primary {
                color: #0d6efd !important;
                /* Ensure primary blue is vibrant */
            }

            .tracking-widest {
                letter-spacing: 0.1em;
            }

            .bg-glass-dark {
                background: rgba(255, 255, 255, 0.03);
                border: 1px solid rgba(255, 255, 255, 0.08);
            }

            .logo-dot {
                width: 12px;
                height: 12px;
                background-color: #0d6efd;
                border-radius: 50%;
            }

            .hover-white:hover {
                color: white !important;
                transition: 0.2s ease;
            }

            .contributor-link {
                display: flex;
                align-items: center;
                text-decoration: none;
            }






</style>

@code {
    private bool isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
    }
}