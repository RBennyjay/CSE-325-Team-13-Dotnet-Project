@namespace SmartBudget.Components.Shared
@using SmartBudget.Utilities

<div class="alert alert-@AlertType" role="alert">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            @if (!string.IsNullOrEmpty(Title))
            {
                <h4 class="alert-heading">@Title</h4>
            }
            @Message
            @if (Messages != null && Messages.Any())
            {
                <ul class="mb-0 mt-2">
                    @foreach (var msg in Messages)
                    {
                        <li>@msg</li>
                    }
                </ul>
            }
        </div>
        @if (Dismissible)
        {
            <button type="button" class="btn-close" @onclick="OnDismiss" aria-label="Close"></button>
        }
    </div>
</div>

@code {
    [Parameter]
    public string AlertType { get; set; } = "info"; // info, success, warning, danger

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public List<string>? Messages { get; set; }

    [Parameter]
    public bool Dismissible { get; set; } = true;

    [Parameter]
    public EventCallback OnDismiss { get; set; }
}
